<%- if controller_name != 'sessions' %>
<a href="<%= new_session_path(resource_name) %>" style="text-decoration: none;font-size: 10px;">Log in</a><br />
<% end %>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <a href="<%= new_registration_path(resource_name) %>" style="text-decoration: none;font-size: 10px;">Sign up</a><br />
<% end %>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <a href="<%= new_password_path(resource_name) %>" style="text-decoration: none;font-size: 10px;">Forgot your password?</a><br />
<% end %>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <a href="<%= new_confirmation_path(resource_name) %>" style="text-decoration: none;font-size: 10px;">Didn't receive confirmation instructions?</a><br />
<% end %>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <a href="<%= new_unlock_path(resource_name) %>" style="text-decoration: none;font-size: 10px;">Didn't receive unlock instructions?</a><br />
<% end %>

<%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
    <%= button_to "Sign in with #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), data: { turbo: false } %><br />
  <% end %>
<% end %>
