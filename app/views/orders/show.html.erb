<!-- app/views/orders/show.html.erb -->

<div class="container mt-5">
  <h1 class="text-center mb-4">Your Order</h1>

  <% if @order.present? %>
    <ul class="list-group">
      <% @order.order_items.each do |order_item| %>
        <li class="list-group-item">
          <%= order_item.product.name %> -
          Quantity: <%= order_item.quantity %> -
          <%= number_to_currency(order_item.price * order_item.quantity) %>
        </li>
      <% end %>
    </ul>

    <div class="mt-3">
      <p>Total: <%= number_to_currency(@order.total_price) %></p>
    </div>
  <% else %>
    <p class="mt-3">Order not found.</p>
  <% end %>
</div>
<div class="text-center mb-4"><%= link_to "Order More", products_path, class: 'btn btn-primary' %></
