     <script>
        document.addEventListener('DOMContentLoaded', function () {
            // Get a reference to the type select element
            var typeSelect = document.getElementById('user_type');

            // Get references to the fields for name, age, and specialization
            var nameField = document.getElementById('name-field');
            var ageField = document.getElementById('age-field');
            var specializationField = document.getElementById('specialization-field') ;

            // Function to show or hide fields based on the selected type
            function toggleFields() {
                var selectedType = typeSelect.value;

                if (selectedType === 'Doctor') {
                    nameField.style.display = 'block';
                    ageField.style.display = 'none';
                    specializationField.style.display = 'block';
                } else if (selectedType === 'Patient') {
                    nameField.style.display = 'block';
                    ageField.style.display = 'block';
                    specializationField.style.display = 'none';
                } else {
                    // Default to Assistant
                    nameField.style.display = 'block';
                    ageField.style.display = 'none';
                    specializationField.style.display = 'none';
                }
            }

            // Initial toggle based on the default selected type
            toggleFields();

            // Add an event listener to the type select element
            typeSelect.addEventListener('change', function () {
                toggleFields();
            });
        });


    </script>

